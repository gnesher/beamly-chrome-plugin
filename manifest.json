{
  "name": "Beamly on demand",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Beamly on damand",
  "homepage_url": "http://gnesher.com",
  "icons": {
    "16": "icons/beamly16.png",
    // "48": "icons/beamly48.png",
    "128": "icons/beamly128.png"
  },
  "permissions": [
    "https://*/*"
  ],
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action":{
      "default_icon":"icons/beamly16.png"
  },  
  "content_scripts": [
    {
      "matches": [
        "http://www.bbc.co.uk/iplayer/*"
      ],
      "css": [
        "src/iplayer/iplayer.css"
      ],
      "js": [
        "/js/jquery-1.11.1.min.js",
        "/js/underscore.js",
        "/js/backbone.js",
        "src/common/common.js",
        "src/iplayer/iplayer.js"
      ]      
    },
    {
      "matches": [
        "http://www.channel4.com/programmes/*"
      ],
      "css": [
        "src/4od/4od.css"
      ],
      "js": [
        "/js/jquery-1.11.1.min.js",
        "/js/underscore.js",
        "/js/backbone.js",
        "src/common/common.js",
        "src/4od/4od.js"
      ]      
    },
    {
      "matches": [
        "https://www.itv.com/itvplayer/*"
      ],
      "css": [
        "src/itv/itv.css"
      ],
      "js": [
        "/js/jquery-1.11.1.min.js",
        "/js/underscore.js",
        "/js/backbone.js",
        "src/common/common.js",
        "js/moment.js",
        "src/itv/itv.js"
      ]      
    }

  ],
  "web_accessible_resources": [
    "icons/appicons.png",
    "js/backbone.js",
    "js/underscore.js",
    "js/jquery-1.11.1.min.js",
    "js/moment.js",
    "src/common/common.js",
    "//static.zeebox.com/embed/1/zeebox.js"
  ]
}
